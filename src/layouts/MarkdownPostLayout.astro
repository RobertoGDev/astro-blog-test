---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.pageTitle}>
    <h1>{frontmatter.title}</h1>
    <div class="data">
        <ul>
            <li>Escrito por {frontmatter.author}</li>
            <li>Publicado el: {frontmatter.pubDate.toString().slice(0, 10)}</li>
            <li>Descripci√≥n: {frontmatter.description}</li>
        </ul>
        <div class="tags">
            {frontmatter.tags.map((tag) => <a class="taglink" href={`/tags/${tag}`} title={tag}>{tag}</a>)}
        </div>
    </div>
    <div class="content">
        <img width={frontmatter.image.ancho} height={frontmatter.image.alto} src={frontmatter.image.url} alt={frontmatter.image.alt} />
        <slot />
    </div>
</BaseLayout>
<style>
    ul {
        list-style-type: none;
        font-size: 0.7em;
        padding: 10px;
    }

    .taglink {
        display: inline-block;
        margin-right: 20px;
    }
    .content {
        position: relative;
    }

    .content img {
        float: left;
        margin-right: 20px;
        max-height: 400px;
        width: auto;
        shape-outside: url({frontmatter.image.url});
    }
</style>
